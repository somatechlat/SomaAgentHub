{
  "dashboard": {
    "title": "SomaGent Cost & Billing",
    "tags": ["somagent", "cost", "billing", "tokens"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "1m",
    "panels": [
      {
        "id": 1,
        "title": "Daily Token Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(llm_tokens_used_total[1h])) by (model) * 3600 * 24",
            "refId": "A",
            "legendFormat": "{{model}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "yaxes": [
          {
            "label": "tokens/day",
            "format": "short"
          }
        ]
      },
      {
        "id": 2,
        "title": "Estimated Daily Cost ($)",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(increase(llm_cost_usd_total[24h]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "green"
                },
                {
                  "value": 100,
                  "color": "yellow"
                },
                {
                  "value": 500,
                  "color": "red"
                }
              ]
            },
            "unit": "currencyUSD",
            "decimals": 2
          }
        },
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Cost by Model (Last 24h)",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum(increase(llm_cost_usd_total[24h])) by (model)",
            "refId": "A",
            "legendFormat": "{{model}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 18,
          "y": 0
        }
      },
      {
        "id": 4,
        "title": "Token Usage by Service",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(llm_tokens_used_total[5m])) by (service)",
            "refId": "A",
            "legendFormat": "{{service}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "yaxes": [
          {
            "label": "tokens/s",
            "format": "short"
          }
        ]
      },
      {
        "id": 5,
        "title": "Budget Utilization (%)",
        "type": "gauge",
        "targets": [
          {
            "expr": "(sum(increase(llm_cost_usd_total[30d])) / 1000) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "green"
                },
                {
                  "value": 70,
                  "color": "yellow"
                },
                {
                  "value": 90,
                  "color": "red"
                }
              ]
            },
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 12,
          "y": 8
        },
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [90],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "last"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "5m",
          "handler": 1,
          "name": "Budget Exceeded",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 6,
        "title": "API Calls by Provider",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(llm_api_calls_total[5m])) by (provider)",
            "refId": "A",
            "legendFormat": "{{provider}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        },
        "yaxes": [
          {
            "label": "calls/s",
            "format": "short"
          }
        ]
      },
      {
        "id": 7,
        "title": "Top 10 Expensive Users",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, sum(increase(llm_cost_usd_total[24h])) by (user_id))",
            "refId": "A",
            "format": "table"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        }
      },
      {
        "id": 8,
        "title": "Cost Trend (7 days)",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(increase(llm_cost_usd_total[1d]))",
            "refId": "A",
            "legendFormat": "Daily Cost"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 24
        },
        "yaxes": [
          {
            "label": "cost ($)",
            "format": "currencyUSD"
          }
        ]
      },
      {
        "id": 9,
        "title": "Estimated Monthly Cost",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(increase(llm_cost_usd_total[24h])) * 30",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 2
          }
        },
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 24
        }
      }
    ],
    "time": {
      "from": "now-7d",
      "to": "now"
    }
  }
}
