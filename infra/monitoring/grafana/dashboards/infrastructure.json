{
  "dashboard": {
    "title": "SomaGent Infrastructure",
    "tags": ["somagent", "infrastructure", "databases"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "PostgreSQL - Active Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "pg_stat_database_numbackends{datname=\"somagent\"}",
            "refId": "A",
            "legendFormat": "Active"
          },
          {
            "expr": "pg_settings_max_connections",
            "refId": "B",
            "legendFormat": "Max"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "PostgreSQL - Query Duration (p95)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(pg_stat_statements_mean_exec_time_bucket[5m]))",
            "refId": "A",
            "legendFormat": "p95 query time"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "yaxes": [
          {
            "label": "ms",
            "format": "ms"
          }
        ]
      },
      {
        "id": 3,
        "title": "Redis - Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "redis_memory_used_bytes / 1024 / 1024",
            "refId": "A",
            "legendFormat": "Used (MB)"
          },
          {
            "expr": "redis_memory_max_bytes / 1024 / 1024",
            "refId": "B",
            "legendFormat": "Max (MB)"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "yaxes": [
          {
            "label": "memory (MB)",
            "format": "short"
          }
        ]
      },
      {
        "id": 4,
        "title": "Redis - Hit Rate",
        "type": "gauge",
        "targets": [
          {
            "expr": "redis_keyspace_hits_total / (redis_keyspace_hits_total + redis_keyspace_misses_total) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "red"
                },
                {
                  "value": 70,
                  "color": "yellow"
                },
                {
                  "value": 90,
                  "color": "green"
                }
              ]
            },
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "Kafka - Messages In/Out",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(kafka_messages_produced_total[5m])) by (topic)",
            "refId": "A",
            "legendFormat": "In - {{topic}}"
          },
          {
            "expr": "sum(rate(kafka_messages_consumed_total[5m])) by (topic)",
            "refId": "B",
            "legendFormat": "Out - {{topic}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        },
        "yaxes": [
          {
            "label": "msg/s",
            "format": "short"
          }
        ]
      },
      {
        "id": 6,
        "title": "Kafka - Consumer Lag",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(kafka_consumer_lag) by (topic, consumer_group)",
            "refId": "A",
            "legendFormat": "{{topic}} - {{consumer_group}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        },
        "yaxes": [
          {
            "label": "lag (messages)",
            "format": "short"
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [1000],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "name": "High Kafka Consumer Lag",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 7,
        "title": "Qdrant - Collection Size",
        "type": "stat",
        "targets": [
          {
            "expr": "qdrant_collection_vectors_count",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 24
        }
      },
      {
        "id": 8,
        "title": "Qdrant - Search Latency (p95)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(qdrant_search_duration_seconds_bucket[5m])) * 1000",
            "refId": "A",
            "legendFormat": "p95"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 6,
          "y": 24
        },
        "yaxes": [
          {
            "label": "ms",
            "format": "ms"
          }
        ]
      },
      {
        "id": 9,
        "title": "ClickHouse - Query Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(clickhouse_query_count[5m])",
            "refId": "A",
            "legendFormat": "Queries/s"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 32
        }
      },
      {
        "id": 10,
        "title": "ClickHouse - Insert Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(clickhouse_insert_rows[5m])",
            "refId": "A",
            "legendFormat": "Rows/s"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 32
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  }
}
